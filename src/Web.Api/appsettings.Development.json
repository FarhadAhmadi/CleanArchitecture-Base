{
  "ConnectionStrings": {
    "Database": "Server=localhost;Initial Catalog=CleanArchitectureBase;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;MultipleActiveResultSets=True;"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Secret": "super-duper-secret-value-that-should-be-in-user-secrets",
    "Issuer": "clean-architecture",
    "Audience": "developers",
    "ExpirationInMinutes": 60
  },
  "Authorization": {
    "PermissionClaimType": "permissions",
    "DefaultAuthenticatedPermissions": [
      "todos:read",
      "todos:write"
    ],
    "StaticUserPermissions": {},
    "StaticEmailPermissions": {
      "admin@cleanarchitecture.local": [
        "users:access"
      ]
    },
    "RolePermissions": {
      "admin": [
        "*"
      ]
    }
  }
}
